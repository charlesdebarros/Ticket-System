<%= simple_form_for [:admin, user] do |f| %>
  <header>
    <h2>Roles</h2>
  </header>
  <table class="roles">
    <% @projects.each do |project| %>
      <tr>
        <th><%= label_tag dom_id(project), project.name %></th>
        <td>
          <%=
            select_tag dom_id(project),
            options_for_select(roles, user.role_on(project)),
            name: "roles[#{project.id}]",
            include_blank: true
          %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= f.input :email, placeholder: "New user's email" %>
  <%= f.input :password, placeholder: "New user's password" %>
  <%= f.input :admin, label: 'Is an admin?' %>
  <%= f.button :submit, class: 'btn btn-outline-primary' %>
<% end %>