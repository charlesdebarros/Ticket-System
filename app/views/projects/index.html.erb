<div class="page-header">
  <h1>Projects</h1>
  <ul class="actions">
    <li><%= link_to fa_icon(:plus, text: 'Add a project'), new_project_path, class: 'btn btn-outline-success' %></li>
  </ul>
</div>
<div id='projects'>
  <% if @projects.any? %>
    <% @projects.each do |project| %>
      <h2><%= link_to project.name, project %></h2>
      <p><%= project.description %></p>
    <% end %>
  <% else %>
    <h3>No projects added yet.</h3>
  <% end %>
  <br>
</div>